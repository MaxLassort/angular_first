<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>myFirstFilter</filter-name>
        <filter-class>User.myFirstFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>myFirstFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <description>ServletContextListener, ServletContextAttributeListener, HttpSessionListener, HttpSessionAttributeListener, RequestListener, RequestAttributeListener</description>
        <listener-class>User.NewServletListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>FirstServlet</servlet-name>
        <servlet-class>com.mycompany.firstwebapp.FirstServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SecondServelt</servlet-name>
        <servlet-class>com.mycompany.firstwebapp.SecondServelt</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowIPAdress</servlet-name>
        <servlet-class>com.mycompany.firstwebapp.ShowIPAdress</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AutoRefreshServlet</servlet-name>
        <servlet-class>com.mycompany.firstwebapp.AutoRefreshServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowrRequestHeaders</servlet-name>
        <servlet-class>com.mycompany.firstwebapp.ShowrRequestHeaders</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Countwords</servlet-name>
        <servlet-class>com.mycompany.firstwebapp.Countwords</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>distributeurController</servlet-name>
        <servlet-class>com.mycompany.firstwebapp.distributeurController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>User.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLogout</servlet-name>
        <servlet-class>User.ServletLogout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FirstServlet</servlet-name>
        <url-pattern>/FirstServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SecondServelt</servlet-name>
        <url-pattern>/SecondServelt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowIPAdress</servlet-name>
        <url-pattern>/ShowIPAdress</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AutoRefreshServlet</servlet-name>
        <url-pattern>/AutoRefreshServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowrRequestHeaders</servlet-name>
        <url-pattern>/ShowrRequestHeaders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Countwords</servlet-name>
        <url-pattern>/Countwords</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>distributeurController</servlet-name>
        <url-pattern>/distributeurController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLogout</servlet-name>
        <url-pattern>/ServletLogout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
